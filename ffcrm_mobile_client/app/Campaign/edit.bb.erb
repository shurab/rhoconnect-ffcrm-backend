<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @campaign.object %>
    <h1>Edit <%= @campaign.assigned_to%></h1>
    <%= link_to "Delete", :action => :delete, :id => @campaign.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @campaign.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Assigned to: </td>
              <td class="itemValue"><input type="text" name="campaign[assigned_to]" value="<%= @campaign.assigned_to %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="campaign[name]" value="<%= @campaign.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Status: </td>
              <td class="itemValue"><input type="text" name="campaign[status]" value="<%= @campaign.status %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Starts on: </td>
              <td class="itemValue"><input type="text" name="campaign[starts_on]" value="<%= @campaign.starts_on %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ends on: </td>
              <td class="itemValue"><input type="text" name="campaign[ends_on]" value="<%= @campaign.ends_on %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
