<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Campaign</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @campaign.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Assigned to: </td>
                <td class="itemValue"><input type="text" name="campaign[assigned_to]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="campaign[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Status: </td>
                <td class="itemValue"><input type="text" name="campaign[status]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Starts on: </td>
                <td class="itemValue"><input type="text" name="campaign[starts_on]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Ends on: </td>
                <td class="itemValue"><input type="text" name="campaign[ends_on]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
