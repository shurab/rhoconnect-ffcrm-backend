<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @opportunity.object %>
    <h1>Edit <%= @opportunity.user_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @opportunity.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @opportunity.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="opportunity[user_id]" value="<%= @opportunity.user_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="opportunity[name]" value="<%= @opportunity.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Campaign: </td>
              <td class="itemValue"><input type="text" name="opportunity[campaign_id]" value="<%= @opportunity.campaign_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Assigned to: </td>
              <td class="itemValue"><input type="text" name="opportunity[assigned_to]" value="<%= @opportunity.assigned_to %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Stage: </td>
              <td class="itemValue"><input type="text" name="opportunity[stage]" value="<%= @opportunity.stage %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Probability: </td>
              <td class="itemValue"><input type="text" name="opportunity[probability]" value="<%= @opportunity.probability %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Closes on: </td>
              <td class="itemValue"><input type="text" name="opportunity[closes_on]" value="<%= @opportunity.closes_on %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Created at: </td>
              <td class="itemValue"><input type="text" name="opportunity[created_at]" value="<%= @opportunity.created_at %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
