<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Opportunity</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @opportunity.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">User: </td>
                <td class="itemValue"><input type="text" name="opportunity[user_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="opportunity[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Campaign: </td>
                <td class="itemValue"><input type="text" name="opportunity[campaign_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Assigned to: </td>
                <td class="itemValue"><input type="text" name="opportunity[assigned_to]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Stage: </td>
                <td class="itemValue"><input type="text" name="opportunity[stage]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Probability: </td>
                <td class="itemValue"><input type="text" name="opportunity[probability]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Closes on: </td>
                <td class="itemValue"><input type="text" name="opportunity[closes_on]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Created at: </td>
                <td class="itemValue"><input type="text" name="opportunity[created_at]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
