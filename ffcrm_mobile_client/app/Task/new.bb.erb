<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Task</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @task.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">User: </td>
                <td class="itemValue"><input type="text" name="task[user_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Assigned to: </td>
                <td class="itemValue"><input type="text" name="task[assigned_to]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Completed by: </td>
                <td class="itemValue"><input type="text" name="task[completed_by]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="task[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Asset: </td>
                <td class="itemValue"><input type="text" name="task[asset_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Priority: </td>
                <td class="itemValue"><input type="text" name="task[priority]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Category: </td>
                <td class="itemValue"><input type="text" name="task[category]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Bucket: </td>
                <td class="itemValue"><input type="text" name="task[bucket]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Due at: </td>
                <td class="itemValue"><input type="text" name="task[due_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Completed at: </td>
                <td class="itemValue"><input type="text" name="task[completed_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Deleted at: </td>
                <td class="itemValue"><input type="text" name="task[deleted_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Created at: </td>
                <td class="itemValue"><input type="text" name="task[created_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Updated at: </td>
                <td class="itemValue"><input type="text" name="task[updated_at]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Background info: </td>
                <td class="itemValue"><input type="text" name="task[background_info]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
